{
  "name": "exvscshiprenderer",
  "version": "1.0.0",
  "description": "EXVSCShipRenderer - A JavaScript library with minification setup",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "type": "module",
  "scripts": {
    "build": "bun run build:esm && bun run build:cjs && bun run build:browser",
    "build:esm": "esbuild src/ShipRenderer.js --bundle --minify --sourcemap --format=esm --outfile=dist/index.esm.js",
    "build:cjs": "esbuild src/ShipRenderer.js --bundle --minify --sourcemap --format=cjs --outfile=dist/index.cjs.js",
    "build:browser": "esbuild src/ShipRenderer.js --bundle --minify --sourcemap --format=iife --global-name=ShipRenderer --outfile=dist/index.browser.js",
    "build:dev": "esbuild src/ShipRenderer.js --bundle --sourcemap --format=esm --outfile=dist/index.esm.js",
    "watch": "esbuild src/ShipRenderer.js --bundle --sourcemap --format=esm --outfile=dist/index.esm.js --watch",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "ship",
    "renderer",
    "javascript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "three": "^0.176.0",
    "three.js": "^0.77.1"
  },
  "devDependencies": {
    "esbuild": "^0.27.0",
    "@types/three": "^0.176.0"
  }
}
